{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react-native",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"],
    "forceConsistentCasingInFileNames": true
  },
  "paths": {
    "@components/*": ["Components/*"]
  },
  "include": ["**/*.ts", "**/*.tsx", "Components/Navigation.ts"],
  "exclude": ["node_modules", "**/*-e2e.js", "**/*.spec.js", "lib.dom.d.ts"],
  "extends": "expo/tsconfig.base"
}
